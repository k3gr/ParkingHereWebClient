{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "include": [
    "src/**/*.json",
    "src/plugins/i18n.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "compilerOptions": {
    "types": ["@intlify/vite-plugin-vue-i18n/client"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution" : "node",
    "esModuleInterop": true,
  },
  "exclude": ["node_modules"]
}
